{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "cd backend && ./gradlew build"
    },
    "deploy": {
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10,
        "startCommand": "cd backend && java -jar build/libs/backend-0.0.1-SNAPSHOT.jar",
        "healthcheckPath": "/",
        "healthcheckTimeout": 300
    }
}